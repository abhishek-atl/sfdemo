{% extends "base.html.twig" %}

{% block body %}

<div class="container">
    <div class="row">
        <h2 class="mt-5 mb-5">Showing User {{ user.name }}</h2>
        <div class="col-md-6 offset-md-3">
            <div class="row">
                <div class="col-md-3">Name</div>
                <div class="col-md-3">{{ user.name }}</div>
            </div>
            <div class="row">
                <div class="col-md-3">Address</div>
                <div class="col-md-3">{{ user.address }}</div>
            </div>
            <div class="row">
                <div class="col-md-3">Salary</div>
                <div class="col-md-3">{{ user.salary }}</div>
            </div>
            <div class="form-group">
                <a href="{{ path('app_user') }}" class="btn btn-primary mt-3">Return</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}